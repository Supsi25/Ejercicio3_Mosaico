<Window x:Class="Ejercicio3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio3_Mosaico"
        mc:Ignorable="d"
        Icon="32.ico"
        Title="Mosaico" Height="500" Width="500">

    <DockPanel>
        <TextBlock DockPanel.Dock="Left" Width="100" Background="Purple" />
        <TextBlock DockPanel.Dock="Top" MinHeight="100" Background="Purple" />

        <TextBlock DockPanel.Dock="Right" Width="100" Background="Green" />
        <TextBlock DockPanel.Dock="Bottom" Height="100" Background="Green" />

        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Width="100" Background="Orange" />
            <TextBlock DockPanel.Dock="Top" Height="100" Background="Fuchsia" />

            <TextBlock DockPanel.Dock="Right" Width="100" Background="Fuchsia" />
            <TextBlock DockPanel.Dock="Bottom" Height="100" Background="Orange" />
            
            <TextBlock Background="Black"></TextBlock>
        </DockPanel>
    </DockPanel>
</Window>
